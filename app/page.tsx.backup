'use client';

import { useState } from 'react';
import { useChat } from '@ai-sdk/react';
import ChatInterface from '@/components/ChatInterface';
import { WorldParameters, ModelTier } from '@/types';

export default function Home() {
  const [isWorldCreated, setIsWorldCreated] = useState(false);
  const [modelTier, setModelTier] = useState<ModelTier>('budget');
  const [worldParams, setWorldParams] = useState<WorldParameters>({});
  const [isGenerating, setIsGenerating] = useState(false);
  const [storyBible, setStoryBible] = useState<string>('');

  const { messages, append, isLoading, setMessages } = useChat({
    api: '/api/chat',
    body: {
      modelTier,
      storyBible,
    },
    onFinish: (message) => {
      // Extract story bible from response if present
      const spoilerMatch = message.content.match(/```spoiler\n([\s\S]*?)\n```/);
      if (spoilerMatch) {
        setStoryBible(spoilerMatch[1]);
      }
    },
  });

  const handleGenerateWorld = async () => {
    setIsGenerating(true);
    try {
      const response = await fetch('/api/generate-world', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          modelTier,
          parameters: worldParams,
        }),
      });

      if (!response.ok) {
        const errorText = await response.text();
        console.error('World generation failed:', errorText);
        throw new Error('Failed to generate world');
      }

      const reader = response.body?.getReader();
      const decoder = new TextDecoder();
      let fullResponse = '';

      if (reader) {
        while (true) {
          const { done, value } = await reader.read();
          if (done) break;

          const chunk = decoder.decode(value, { stream: true });
          fullResponse += chunk;
        }
      }

      // The response is plain text from toTextStreamResponse()
      console.log('Generated world content:', fullResponse.substring(0, 200));

      // Add the generated world as the first assistant message
      setMessages([
        {
          id: 'world-init',
          role: 'assistant',
          content: fullResponse,
          createdAt: new Date(),
        },
      ]);

      // Extract story bible
      const spoilerMatch = fullResponse.match(/```spoiler\n([\s\S]*?)\n```/);
      if (spoilerMatch) {
        setStoryBible(spoilerMatch[1]);
      }

      setIsWorldCreated(true);
    } catch (error) {
      console.error('Error generating world:', error);
      alert('Failed to generate world. Please try again.');
    } finally {
      setIsGenerating(false);
    }
  };

  const handleSendMessage = async (content: string) => {
    await append({
      role: 'user',
      content,
    });
  };

  const handleEditMessage = async (messageId: string, newContent: string) => {
    // Find the index of the edited message
    const messageIndex = messages.findIndex((m) => m.id === messageId);
    if (messageIndex === -1) return;

    // Remove all messages after the edited one
    const newMessages = messages.slice(0, messageIndex);

    // Update the edited message
    newMessages.push({
      ...messages[messageIndex],
      content: newContent,
    });

    setMessages(newMessages);

    // Regenerate response from this point
    await append({
      role: 'user',
      content: newContent,
    });
  };

  if (!isWorldCreated) {
    return (
      <main className="min-h-screen bg-gradient-to-br from-blue-50 via-slate-50 to-cyan-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900 p-8 transition-colors">
        <div className="max-w-2xl mx-auto">
          <div className="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl p-8 border border-slate-200 dark:border-slate-700 transition-colors">
            <h1 className="text-4xl font-bold mb-2 bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-400 dark:to-cyan-400 bg-clip-text text-transparent">
              Interactive Worlds
            </h1>
            <p className="text-slate-600 dark:text-slate-300 mb-8">
              Create your own immersive text adventure with persistent worlds and dynamic storytelling
            </p>

            <div className="space-y-6">
              {/* Model Tier Selection */}
              <div>
                <label className="block text-sm font-semibold text-slate-700 dark:text-slate-200 mb-2">
                  Model Tier
                </label>
                <div className="grid grid-cols-2 gap-4">
                  <button
                    onClick={() => setModelTier('budget')}
                    className={`p-4 rounded-lg border-2 transition-all ${
                      modelTier === 'budget'
                        ? 'border-blue-600 dark:border-blue-400 bg-blue-50 dark:bg-blue-900/30'
                        : 'border-slate-200 dark:border-slate-600 hover:border-slate-300 dark:hover:border-slate-500'
                    }`}
                  >
                    <div className="font-semibold text-slate-900 dark:text-slate-100">Budget</div>
                    <div className="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      Gemini Flash + Claude Haiku
                    </div>
                  </button>
                  <button
                    onClick={() => setModelTier('pro')}
                    className={`p-4 rounded-lg border-2 transition-all ${
                      modelTier === 'pro'
                        ? 'border-cyan-600 dark:border-cyan-400 bg-cyan-50 dark:bg-cyan-900/30'
                        : 'border-slate-200 dark:border-slate-600 hover:border-slate-300 dark:hover:border-slate-500'
                    }`}
                  >
                    <div className="font-semibold text-slate-900 dark:text-slate-100">Pro</div>
                    <div className="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      Gemini Pro + Claude Sonnet
                    </div>
                  </button>
                </div>
              </div>

              {/* World Type */}
              <div>
                <label className="block text-sm font-semibold text-slate-700 dark:text-slate-200 mb-2">
                  World Type (Optional)
                </label>
                <input
                  type="text"
                  placeholder="e.g., Cultivation Fantasy, Space Opera, Medieval Kingdom..."
                  className="w-full p-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 transition-colors"
                  value={worldParams.worldType || ''}
                  onChange={(e) =>
                    setWorldParams({ ...worldParams, worldType: e.target.value })
                  }
                />
              </div>

              {/* Power System */}
              <div>
                <label className="block text-sm font-semibold text-slate-700 dark:text-slate-200 mb-2">
                  Power System (Optional)
                </label>
                <input
                  type="text"
                  placeholder="e.g., Qi Cultivation, Magic Circles, Genetic Modification..."
                  className="w-full p-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 transition-colors"
                  value={worldParams.powerSystem || ''}
                  onChange={(e) =>
                    setWorldParams({ ...worldParams, powerSystem: e.target.value })
                  }
                />
              </div>

              {/* Starting Class */}
              <div>
                <label className="block text-sm font-semibold text-slate-700 dark:text-slate-200 mb-2">
                  Starting Social Class (Optional)
                </label>
                <input
                  type="text"
                  placeholder="e.g., Peasant, Merchant, Noble..."
                  className="w-full p-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 transition-colors"
                  value={worldParams.startingClass || ''}
                  onChange={(e) =>
                    setWorldParams({ ...worldParams, startingClass: e.target.value })
                  }
                />
              </div>

              {/* Custom Prompt */}
              <div>
                <label className="block text-sm font-semibold text-slate-700 dark:text-slate-200 mb-2">
                  Custom Instructions (Optional)
                </label>
                <textarea
                  placeholder="Any additional instructions for world generation..."
                  className="w-full p-3 border border-slate-300 dark:border-slate-600 rounded-lg bg-white dark:bg-slate-700 text-slate-900 dark:text-slate-100 placeholder-slate-400 dark:placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 resize-none transition-colors"
                  rows={4}
                  value={worldParams.customPrompt || ''}
                  onChange={(e) =>
                    setWorldParams({ ...worldParams, customPrompt: e.target.value })
                  }
                />
              </div>

              <button
                onClick={handleGenerateWorld}
                disabled={isGenerating}
                className="w-full bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-500 dark:to-cyan-500 text-white py-4 rounded-lg font-semibold hover:from-blue-700 hover:to-cyan-700 dark:hover:from-blue-600 dark:hover:to-cyan-600 disabled:from-slate-400 disabled:to-slate-500 disabled:cursor-not-allowed transition-all shadow-lg hover:shadow-xl"
              >
                {isGenerating ? (
                  <span className="flex items-center justify-center gap-2">
                    <div className="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                    Generating World...
                  </span>
                ) : (
                  'Generate World & Start Adventure'
                )}
              </button>
            </div>
          </div>

          <div className="mt-6 text-center text-sm text-slate-500 dark:text-slate-400">
            <p>Your adventure will be unique, dangerous, and full of hidden plots.</p>
            <p className="mt-1">
              Be careful - not everyone is trustworthy, and some opportunities are traps.
            </p>
          </div>
        </div>
      </main>
    );
  }

  return (
    <main className="h-screen flex flex-col bg-slate-50 dark:bg-slate-900 transition-colors">
      {/* Header */}
      <div className="bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-500 dark:to-cyan-500 text-white p-4 shadow-lg">
        <div className="max-w-7xl mx-auto flex justify-between items-center">
          <h1 className="text-2xl font-bold">Interactive Worlds</h1>
          <div className="flex items-center gap-4">
            <span className="text-sm bg-white/20 px-3 py-1 rounded-full">
              {modelTier === 'budget' ? 'Free Tier' : 'Pro Tier'}
            </span>
            <button
              onClick={() => {
                if (confirm('Start a new adventure? This will clear the current story.')) {
                  setIsWorldCreated(false);
                  setMessages([]);
                  setStoryBible('');
                }
              }}
              className="text-sm bg-white/20 hover:bg-white/30 px-4 py-2 rounded-lg transition-colors"
            >
              New Adventure
            </button>
          </div>
        </div>
      </div>

      {/* Chat Interface */}
      <div className="flex-1 overflow-hidden">
        <ChatInterface
          worldId="current"
          chatId="current"
          initialMessages={messages}
          onSendMessage={handleSendMessage}
          onEditMessage={handleEditMessage}
          isLoading={isLoading}
        />
      </div>
    </main>
  );
}
